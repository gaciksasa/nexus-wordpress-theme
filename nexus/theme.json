{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"settings": {
		"appearanceTools": true,
		"useRootPaddingAwareAlignments": true,
		"color": {
			"defaultDuotone": false,
			"defaultGradients": false,
			"defaultPalette": false,
			"duotone": [],
			"gradients": [
				{
					"gradient": "linear-gradient(135deg, var(--nexus-color-primary) 0%, var(--nexus-color-secondary) 100%)",
					"name": "Primary Gradient",
					"slug": "primary-gradient"
				},
				{
					"gradient": "linear-gradient(135deg, #667eea 0%, #764ba2 100%)",
					"name": "Purple Gradient",
					"slug": "purple-gradient"
				},
				{
					"gradient": "linear-gradient(135deg, #f093fb 0%, #f5576c 100%)",
					"name": "Pink Gradient",
					"slug": "pink-gradient"
				},
				{
					"gradient": "linear-gradient(135deg, #4facfe 0%, #00f2fe 100%)",
					"name": "Blue Gradient",
					"slug": "blue-gradient"
				},
				{
					"gradient": "linear-gradient(135deg, #43e97b 0%, #38f9d7 100%)",
					"name": "Green Gradient",
					"slug": "green-gradient"
				}
			],
			"palette": [
				{
					"color": "#1a1a2e",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#e94560",
					"name": "Secondary",
					"slug": "secondary"
				},
				{
					"color": "#0f3460",
					"name": "Dark",
					"slug": "dark"
				},
				{
					"color": "#16213e",
					"name": "Dark Alt",
					"slug": "dark-alt"
				},
				{
					"color": "#f8f9fa",
					"name": "Light",
					"slug": "light"
				},
				{
					"color": "#ffffff",
					"name": "White",
					"slug": "white"
				},
				{
					"color": "#000000",
					"name": "Black",
					"slug": "black"
				},
				{
					"color": "#6c757d",
					"name": "Muted",
					"slug": "muted"
				},
				{
					"color": "#28a745",
					"name": "Success",
					"slug": "success"
				},
				{
					"color": "#dc3545",
					"name": "Danger",
					"slug": "danger"
				},
				{
					"color": "#ffc107",
					"name": "Warning",
					"slug": "warning"
				},
				{
					"color": "#17a2b8",
					"name": "Info",
					"slug": "info"
				}
			]
		},
		"custom": {
			"spacing": {
				"small": "1rem",
				"medium": "2rem",
				"large": "4rem",
				"x-large": "6rem"
			},
			"typography": {
				"font-size": {
					"tiny": "0.75rem",
					"small": "0.875rem",
					"normal": "1rem",
					"medium": "1.125rem",
					"large": "1.25rem",
					"x-large": "1.5rem",
					"xx-large": "2rem",
					"xxx-large": "2.5rem",
					"huge": "3.5rem"
				},
				"line-height": {
					"tight": "1.2",
					"normal": "1.5",
					"loose": "1.8"
				}
			}
		},
		"layout": {
			"contentSize": "780px",
			"wideSize": "1200px"
		},
		"spacing": {
			"blockGap": true,
			"margin": true,
			"padding": true,
			"spacingScale": {
				"operator": "*",
				"increment": 1.5,
				"steps": 7,
				"mediumStep": 1.5,
				"unit": "rem"
			},
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			]
		},
		"typography": {
			"defaultFontSizes": false,
			"fluid": true,
			"fontFamilies": [
				{
					"fontFamily": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
					"name": "Inter (Body)",
					"slug": "inter"
				},
				{
					"fontFamily": "'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
					"name": "Poppins (Headings)",
					"slug": "poppins"
				},
				{
					"fontFamily": "'Playfair Display', Georgia, 'Times New Roman', serif",
					"name": "Playfair Display (Serif)",
					"slug": "playfair"
				},
				{
					"fontFamily": "'Space Grotesk', -apple-system, BlinkMacSystemFont, sans-serif",
					"name": "Space Grotesk (Modern)",
					"slug": "space-grotesk"
				},
				{
					"fontFamily": "'DM Sans', -apple-system, BlinkMacSystemFont, sans-serif",
					"name": "DM Sans (Clean)",
					"slug": "dm-sans"
				},
				{
					"fontFamily": "Georgia, Cambria, 'Times New Roman', serif",
					"name": "System Serif",
					"slug": "system-serif"
				},
				{
					"fontFamily": "'Courier New', Courier, monospace",
					"name": "Monospace",
					"slug": "monospace"
				}
			],
			"fontSizes": [
				{
					"fluid": false,
					"name": "Tiny",
					"size": "0.75rem",
					"slug": "tiny"
				},
				{
					"fluid": false,
					"name": "Small",
					"size": "0.875rem",
					"slug": "small"
				},
				{
					"fluid": false,
					"name": "Normal",
					"size": "1rem",
					"slug": "normal"
				},
				{
					"fluid": {
						"min": "1rem",
						"max": "1.125rem"
					},
					"name": "Medium",
					"size": "1.125rem",
					"slug": "medium"
				},
				{
					"fluid": {
						"min": "1.125rem",
						"max": "1.25rem"
					},
					"name": "Large",
					"size": "1.25rem",
					"slug": "large"
				},
				{
					"fluid": {
						"min": "1.25rem",
						"max": "1.5rem"
					},
					"name": "X-Large",
					"size": "1.5rem",
					"slug": "x-large"
				},
				{
					"fluid": {
						"min": "1.5rem",
						"max": "2rem"
					},
					"name": "XX-Large",
					"size": "2rem",
					"slug": "xx-large"
				},
				{
					"fluid": {
						"min": "2rem",
						"max": "2.5rem"
					},
					"name": "Huge",
					"size": "2.5rem",
					"slug": "huge"
				},
				{
					"fluid": {
						"min": "2.5rem",
						"max": "3.5rem"
					},
					"name": "Gigantic",
					"size": "3.5rem",
					"slug": "gigantic"
				}
			]
		}
	},
	"styles": {
		"blocks": {
			"core/button": {
				"variations": {
					"outline": {
						"border": {
							"color": "currentColor",
							"radius": "var(--nexus-border-radius)",
							"style": "solid",
							"width": "2px"
						},
						"color": {
							"background": "transparent",
							"text": "currentColor"
						},
						"spacing": {
							"padding": {
								"top": "0.75em",
								"right": "1.75em",
								"bottom": "0.75em",
								"left": "1.75em"
							}
						}
					}
				}
			},
			"core/heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--poppins)",
					"fontWeight": "700",
					"lineHeight": "1.2"
				}
			},
			"core/navigation": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--normal)"
				}
			},
			"core/post-title": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--poppins)",
					"fontWeight": "700"
				}
			},
			"core/query-pagination": {
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--primary)"
						}
					}
				}
			},
			"core/site-title": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--poppins)",
					"fontWeight": "700",
					"textDecoration": "none"
				}
			}
		},
		"color": {
			"background": "#ffffff",
			"text": "#1a1a2e"
		},
		"elements": {
			"button": {
				":focus": {
					"outline": {
						"color": "var(--wp--preset--color--primary)",
						"offset": "2px",
						"style": "solid",
						"width": "2px"
					}
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--dark)",
						"text": "#ffffff"
					}
				},
				"border": {
					"radius": "6px"
				},
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "#ffffff"
				},
				"spacing": {
					"padding": {
						"top": "0.75em",
						"right": "1.75em",
						"bottom": "0.75em",
						"left": "1.75em"
					}
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--inter)",
					"fontSize": "var(--wp--preset--font-size--normal)",
					"fontWeight": "600",
					"lineHeight": "1.5"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--gigantic)",
					"fontWeight": "700",
					"lineHeight": "1.1"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--huge)",
					"fontWeight": "700",
					"lineHeight": "1.2"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xx-large)",
					"fontWeight": "600",
					"lineHeight": "1.3"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)",
					"fontWeight": "600",
					"lineHeight": "1.4"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)",
					"fontWeight": "600",
					"lineHeight": "1.4"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontWeight": "600",
					"lineHeight": "1.4"
				}
			},
			"link": {
				":focus": {
					"typography": {
						"textDecoration": "underline"
					}
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--secondary)"
					},
					"typography": {
						"textDecoration": "none"
					}
				},
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				"typography": {
					"textDecoration": "underline"
				}
			}
		},
		"spacing": {
			"blockGap": "1.5rem"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--inter)",
			"fontSize": "var(--wp--preset--font-size--normal)",
			"lineHeight": "1.6"
		}
	},
	"templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "header",
			"name": "header-transparent",
			"title": "Header Transparent"
		},
		{
			"area": "header",
			"name": "header-centered",
			"title": "Header Centered Logo"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Footer"
		},
		{
			"area": "footer",
			"name": "footer-minimal",
			"title": "Footer Minimal"
		}
	],
	"customTemplates": [
		{
			"name": "blank",
			"postTypes": [
				"page",
				"post"
			],
			"title": "Blank (No Header/Footer)"
		},
		{
			"name": "full-width",
			"postTypes": [
				"page"
			],
			"title": "Full Width"
		},
		{
			"name": "coming-soon",
			"postTypes": [
				"page"
			],
			"title": "Coming Soon"
		}
	]
}
